<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/song_list_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/song_list_item_margin"
        android:layout_marginRight="@dimen/song_list_item_margin"
        android:layout_marginTop="@dimen/song_list_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivSongIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@android:drawable/ic_media_play"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/song_list_item_padding_top_bottom"
            android:paddingTop="@dimen/song_list_item_padding_top_bottom"
            android:paddingLeft="@dimen/song_list_item_padding_left_right"
            android:paddingRight="@dimen/song_list_item_padding_left_right"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:textColor="@color/song_name"
                android:textSize="@dimen/song_list_item_song_name"
                android:textStyle="bold"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/song_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Artist"
                android:textColor="@color/artist_name"
                android:textSize="@dimen/song_list_item_artist_name"
                android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
